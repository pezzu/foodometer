{
  "name": "foodometer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "tailwindcss": "^1.9.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn run build:style && yarn run build:client",
    "build:client": "react-scripts build",
    "build:styles": "tailwindcss build src/styles/tailwind.css -o src/styles/index.css",
    "client": "react-scripts start",
    "styles": "tailwindcss build src/styles/tailwind.css -o src/styles/index.css --watch",
    "dev": "yarn run build:styles && yarn run client",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
